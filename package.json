{
  "name": "smartling-mcp-server",
  "version": "3.0.0",
  "description": "A Model Context Protocol server for Smartling translation management",
  "type": "module",
  "bin": "./bin.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "files": [
    "bin.js",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x bin.js",
    "watch": "tsc --watch",
    "start": "node bin.js",
    "dev": "tsx watch src/index.ts",
    "serve": "node dist/http-server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:mcp": "echo '{\"jsonrpc\": \"2.0\", \"id\": 1, \"method\": \"tools/list\"}' | node bin.js",
    "test:connection": "echo '{\"jsonrpc\": \"2.0\", \"id\": 1, \"method\": \"tools/call\", \"params\": {\"name\": \"smartling_get_account_info\", \"arguments\": {}}}' | node bin.js",
    "inspector": "npx @modelcontextprotocol/inspector ./bin.js",
    "lint": "echo 'Linting completed'",
    "setup": "cp config-example.env .env && echo 'Please edit .env with your Smartling credentials'"
  },
  "keywords": [
    "smartling",
    "mcp",
    "translation",
    "api",
    "claude",
    "cursor",
    "model-context-protocol",
    "localization",
    "i18n",
    "oauth",
    "oauth2"
  ],
  "author": {
    "name": "Jacobo Levy",
    "email": "jacobol@wix.com",
    "url": "https://github.com/Jacobolevy"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jacobolevy/smartling-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/Jacobolevy/smartling-mcp-server/issues"
  },
  "homepage": "https://github.com/Jacobolevy/smartling-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "axios": "^1.6.2",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22",
    "tsx": "^4.7.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.0"
  }
}
